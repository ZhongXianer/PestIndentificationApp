<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/information_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="识虫"
                android:layout_marginTop="@dimen/margin_medium"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/information_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_max"
                android:layout_marginEnd="@dimen/margin_max"
                android:text="基于ResNet与RA-CNN的林业有害生物识别系统"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/information_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/information_para1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_para1"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/information_description"/>
            <TextView
                android:id="@+id/information_para2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_para2"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_min"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/information_para1"/>
            <TextView
                android:id="@+id/contact_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="如果有什么问题或者建议，点击下面的按钮联系我们。"
                android:layout_marginTop="@dimen/margin_min"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/information_para2"/>
            <Button
                android:id="@+id/contact_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_contact"
                android:text="联系我们"
                android:paddingStart="@dimen/margin_max"
                android:paddingEnd="@dimen/margin_max"
                android:layout_marginBottom="@dimen/margin_medium"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/margin_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contact_tip"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
